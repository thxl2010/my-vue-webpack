px2rem(prop, $px, $base-font-size = 75)
  {prop}: ($px / $base-font-size) * 1rem;

font-dpr($font-size) {
  font-size: $font-size;

  [data-dpr="2"] & {
    font-size: $font-size * 2;
  }

  [data-dpr="3"] & {
    font-size: $font-size * 3;
  }
}


// ==========  mixin 文本单行溢出隐藏 ==========
text-overflow($max-width)
  max-width: $max-width
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
textOverflow()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

// =====================================
line-clamp(line)
  overflow hidden
  display -webkit-box
  -webkit-line-clamp line
  -webkit-box-orient vertical

pixel-border(xOffset, yOffset)
  background-image linear-gradient(180deg, $extraLightGray, $extraLightGray, 50%, transparent 50%)
  background-size 120% 1px
  background-repeat no-repeat
  background-position xOffset yOffset
  background-origin content-box

scrollbar(width)
  &::-webkit-scrollbar /* 滚动条整体样式 */
    width width    /* 高宽分别对应横竖滚动条的尺寸 */
    height 8px
  &::-webkit-scrollbar-thumb /* 滚动条里面小方块 */
    border-radius width * 0.5
    -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2)
    background $controlsStroke
  &::-webkit-scrollbar-track /* 滚动条里面轨道 */
    background-color transparent

