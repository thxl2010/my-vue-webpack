// Variables
@import "_variables.styl"

// Flag icons
span, i
  &.flag-icons
    background-size contain
    background-position center
    background-repeat no-repeat
    position relative
    display inline-block
    line-height 1em
    // Rectangle
    height 1em
    width (4 / 3) * 1em

    // Square
    &.square
      height 1em
      width 1em

    // Non-breaking space
    &:before
      content "\00a0"

    // Flags
    for $flag in $countries
      &.{$flag}
        background-image url($path + "/" + $flag + ".svg")

    for $flag in $extras
      &.{$flag}
        background-image url($path + "/" + $flag + ".svg")
